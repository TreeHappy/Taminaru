{
    "name": "Arch Dev Container",
    "build": {
        "dockerfile": "Dockerfile"
    },
    "remoteUser": "devuser",
    "containerEnv": {
        "SHELL": "/usr/bin/zsh"
    },
    "customizations": {
        "vscode": {
            "settings": {
                "terminal.integrated.defaultProfile.linux": "zsh",
                "terminal.integrated.automationShell.linux": "zsh"
            }
        }
    }
}