{
    "name": "Arch Dev Container",
    "build": {
        "dockerfile": "Dockerfile"
    },
    "remoteUser": "taminaru",
    "containerEnv": {
        "SHELL": "/usr/bin/zsh"
    },
    "customizations": {
        "vscode": {
            "settings": {
                "terminal.integrated.defaultProfile.linux": "zsh",
                "terminal.integrated.automationShell.linux": "zsh"
            }
        }
    },
    "features": {
        "ghcr.io/devcontainers/features/sshd:1": {}
    }
}